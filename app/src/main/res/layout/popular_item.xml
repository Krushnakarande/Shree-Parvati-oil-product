<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="164dp"
        android:layout_height="260dp"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        app:cardCornerRadius="22dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Your existing CardView layout here -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- ImageView, TextView, Price, Add to Cart Button inside the card -->
            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="141dp"
                android:layout_height="125dp"
                android:layout_marginStart="8dp"

                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/foodNamePopular"
                android:layout_width="113dp"
                android:layout_height="23dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/abyssinica_sil"
                android:text="Food Name"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/imageView5"
                app:layout_constraintStart_toStartOf="@+id/imageView5"
                app:layout_constraintTop_toBottomOf="@+id/imageView5" />

            <TextView
                android:id="@+id/PricePopolar"
                android:layout_width="41dp"
                android:layout_height="22dp"
                android:layout_marginTop="8dp"

                android:text="â‚¹50"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="16dp"
                app:layout_constraintEnd_toEndOf="@+id/foodNamePopular"
                app:layout_constraintStart_toStartOf="@+id/foodNamePopular"
                app:layout_constraintTop_toBottomOf="@+id/foodNamePopular" />

            <TextView
                android:id="@+id/menuaddToCart"
                android:layout_width="91dp"
                android:layout_height="26dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="36dp"
                android:background="@drawable/addtocartshape"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="Add To Cart"
                android:textColor="@color/black"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@+id/PricePopolar"
                app:layout_constraintHorizontal_bias="0.302"
                app:layout_constraintStart_toStartOf="@+id/PricePopolar"
                app:layout_constraintTop_toBottomOf="@+id/PricePopolar" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>